{
	"easycom": {
		"autoscan": true,
		"custom": {
			"^wd-(.*)": "wot-design-uni/components/wd-$1/wd-$1.vue",
			"^CommentInput$": "@/components/CommentInput.vue"
		}
	},
	"pages": [
		{
			"path": "pages/layout/layout",
			"style": {
				"navigationBarTitleText": "首页",
				"navigationStyle": "custom",
				"navigationBarTextStyle": "white"
			}
		},
		{
			"path": "pages/login/login",
			"style": {
				"navigationBarTitleText": "登录",
				"navigationStyle": "custom",
				"navigationBarTextStyle": "white"
			}
		},
		{
			"path": "pages/tabbar/home/home",
			"style": {
				"navigationBarTitleText": "首页"
			}
		},
		{
			"path": "pages/tabbar/follow/follow",
			"style": {
				"navigationBarTitleText": "关注",
				"navigationBarBackgroundColor": "#ffffff",
				"navigationBarTextStyle": "black",
				"enablePullDownRefresh": true,
				"backgroundColor": "#f8f9fa"
			}
		},
		{
			"path": "pages/tabbar/release/release",
			"style": {
				"navigationBarTitleText": "发布"
			}
		},
		{
			"path": "pages/tabbar/info/info",
			"style": {
				"navigationBarTitleText": "消息"
			}
		},
		{
			"path": "pages/tabbar/mine/mine",
			"style": {
				"navigationBarTitleText": "我的",
				"navigationStyle": "custom",
				"navigationBarTextStyle": "white"
			}
		},
		{
			"path": "pages/favorites/favorites",
			"style": {
				"navigationBarTitleText": "我的收藏",
				"enablePullDownRefresh": true
			}
		},
		{
			"path": "pages/followList/followList",
			"style": {
				"navigationStyle": "custom",
				"enablePullDownRefresh": true
			}
		},
		{
			"path": "pages/postDetail/postDetail",
			"style": {
				"navigationStyle": "custom",
				"enablePullDownRefresh": true
			}
		}
	],

	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	}
}