{
	"easycom": {
		"autoscan": true,
		"custom": {
			"^wd-(.*)": "wot-design-uni/components/wd-$1/wd-$1.vue",
			"^CommentInput$": "@/components/CommentInput.vue",
			"^ChatInput$": "@/components/ChatInput.vue"
		}
	},
	"pages": [
		{
			"path": "pages/layout/layout",
			"style": {
				"navigationBarTitleText": "首页",
				"navigationStyle": "custom",
				"navigationBarTextStyle": "white"
			}
		},
		{
			"path": "pages/login/login",
			"style": {
				"navigationBarTitleText": "登录",
				"navigationStyle": "custom",
				"navigationBarTextStyle": "white"
			}
		},
		{
			"path": "pages/tabbar/home/home",
			"style": {
				"navigationBarTitleText": "首页"
			}
		},
		{
			"path": "pages/tabbar/follow/follow",
			"style": {
				"navigationBarTitleText": "关注",
				"navigationBarBackgroundColor": "#ffffff",
				"navigationBarTextStyle": "black",
				"enablePullDownRefresh": true,
				"backgroundColor": "#f8f9fa"
			}
		},
		{
			"path": "pages/tabbar/release/release",
			"style": {
				"navigationBarTitleText": "发布"
			}
		},
		{
			"path": "pages/tabbar/message/message",
			"style": {
				"navigationBarTitleText": "消息"
			}
		},
		{
			"path": "pages/tabbar/mine/mine",
			"style": {
				"navigationBarTitleText": "我的",
				"navigationStyle": "custom",
				"navigationBarTextStyle": "white"
			}
		},
		{
			"path": "pages/favorites/favorites",
			"style": {
				"navigationBarTitleText": "我的收藏",
				"enablePullDownRefresh": true
			}
		},
		{
			"path": "pages/followList/followList",
			"style": {
				"navigationStyle": "custom",
				"enablePullDownRefresh": true
			}
		},
		{
			"path": "pages/postDetail/postDetail",
			"style": {
				"navigationStyle": "custom",
				"enablePullDownRefresh": true
			}
		},
		{
			"path": "pages/chatDetail/chatDetail",
			"style": {
				"navigationStyle": "custom",
				"enablePullDownRefresh": true
			}
		},
		{
			"path": "pages/editProfile/editProfile",
			"style": {
				"navigationStyle": "custom",
				"navigationBarTextStyle": "black"
			}
		},
		{
			"path": "pages/search/search",
			"style": {
				"navigationStyle": "custom",
				"navigationBarTextStyle": "black",
				"enablePullDownRefresh": false,
				"backgroundColor": "#fdf4f4"
			}
		},
		{
			"path": "pages/userProfile/userProfile",
			"style": {
				"navigationBarTitleText": "用户主页",
				"navigationStyle": "custom",
				"navigationBarTextStyle": "white"
			}
		},
		{
			"path": "pages/qrPoster/qrPoster",
			"style": {
				"navigationBarTitleText": "二维码海报",
				"navigationStyle": "custom",
				"navigationBarTextStyle": "black"
			}
		},
		{
			"path": "pages/systemMessage/systemMessage",
			"style": {
				"navigationBarTitleText": "系统通知",
				"navigationStyle": "custom",
				"navigationBarTextStyle": "black",
				"enablePullDownRefresh": true
			}
		},
		{
			"path": "pages/interactionMessage/interactionMessage",
			"style": {
				"navigationBarTitleText": "消息",
				"navigationStyle": "custom",
				"navigationBarTextStyle": "black",
				"enablePullDownRefresh": true
			}
		}
	],

	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	}
}